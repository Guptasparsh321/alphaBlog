<h1 class="text-center mt-4">Create a Category</h1>
<br>
<div class="container">
 <div class="row justify-content-center">
   <div class="col-10">
   <%= render 'shared/errors',obj: @category %>
   <%= form_with(model: @category, class:"shadow p-5 mb-3 bg-success rounded", local: true )do |f| %>
   <div class="row mb-4"> 
    <%= f.label :name, "Category Name" ,class:"col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= f.text_field :name ,class:"form-control shadow rounded" %>
    </div>
     </div>

    <div class="d-flex justify-content-center">
    <%= f.submit class:"btn btn-outline-light btn-lg" %> 
  </div>
   <% end %>
    </div>
    <div class="mb-5">
   <%= link_to '[Cancel and Go Back to Article Listing Page]',articles_path, class:"d-flex justify-content-center text-success",id:"home_btn" %>
     </div>
   </div>
</div>