<div class="container">
 <div class="row justify-content-center">
   <div class="col-10">
   <%= render 'shared/errors', obj: @article %>
   <%= form_with(model: @article, class:"shadow p-5 mb-3 bg-success rounded", local: true )do |f| %>
   <div class="row mb-4"> 
    <%= f.label :title ,class:"col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= f.text_field :title ,class:"form-control shadow rounded" %>
    </div>
     </div>
    <div class="row mb-4"> 
    <%= f.label :description ,class:"col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= f.text_area :description, rows:10, class:"form-control shadow rounded" %>
    </div>
    </div>
    <div class="d-flex justify-content-center">
    <%= f.submit class:"btn btn-outline-light btn-lg" %> 
  </div>
   <% end %>
    </div>
    <div class="mb-5">
   <%= link_to '[Cancel and Go Back to Article Listing Page]',articles_path, class:"d-flex justify-content-center text-success",id:"home_btn" %>
     </div>
   </div>
</div>